doctype html
html(lang='en')
  head
    meta(charset='UTF-8')
    meta(http-equiv='X-UA-Compatible' content='IE=edge')
    meta(name='viewport' content='width=device-width, initial-scale=1.0')
    title 注册
    script(src='/javascripts/register.js')
    link(rel='icon' href='/images/icons8.png' type='image/x-icon')
    link(rel='stylesheet' href='/stylesheets/login-register.css')
  body
    .main
      span 注册
      br
      br
      form
        .input_box
          input(type='text' name='loginid' autocomplete='off' required='required')
          label(for='loginid') 用户名 
        .input_box
          input(type='password' name='login_pwd' required='required')
          label(for='login_pwd') 密码
        .input_box
          input(type='password' name='login_repwd' required='required')
          label(for='login_repwd') 确认密码
        .input_box
          input(type='text' name='nikename' autocomplete='off' required='required')
          label(for='nikename') 昵称
        .input_box
          input(type='text' name='brithday' autocomplete='off' placeholder='2000-01-01')
          label(for='brithday') 生日
        .input_box
          input(type='email' name='email' autocomplete='off' placeholder='xxx@xx.com')
          label(for='email') 电子邮箱
        input.btn(type='button' value='确认' name='submit' onclick='regist()')
        input.btn(type='button' value='返回' onclick='comeback()')
        br
        br
        |             已有账号，去
        a(href='login') 登录
